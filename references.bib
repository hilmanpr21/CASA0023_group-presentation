@article{faizanaPEMETAANRISIKOBENCANA2015,
  title = {PEMETAAN RISIKO BENCANA TANAH LONGSOR KOTA SEMARANG},
  author = {Faizana, Fina and Nugraha, Arief Laila and Yuwono, Bambang Darmo},
  date = {2015-01-27},
  journaltitle = {Jurnal Geodesi UNDIP},
  volume = {4},
