@article{handayaniUrbanizationIncreasingFlood2020,
  title = {Urbanization and {{Increasing Flood Risk}} in the {{Northern Coast}} of {{Central Java}}—{{Indonesia}}: {{An Assessment}} towards {{Better Land Use Policy}} and {{Flood Management}}},
  shorttitle = {Urbanization and {{Increasing Flood Risk}} in the {{Northern Coast}} of {{Central Java}}—{{Indonesia}}},
